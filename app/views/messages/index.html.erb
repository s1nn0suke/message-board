<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <div class="form-grpup">
    <label for="message_name">名前:</label>
    <%= f.text_field :name, class: "form-control", placeholder: "名前を入力して下さい。" %>
  </div>

  <div class="form-grpup">
    <label for="message_body">内容:</label>
    <%= f.text_area :body, class: "form-control", placeholder: "内容を入力して下さい。" %>
  </div>

  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>